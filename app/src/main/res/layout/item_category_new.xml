<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        app:cardCornerRadius="@dimen/dimen_6"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_categories"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_categories"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_title_category"
        android:layout_marginTop="@dimen/dimen_8"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/font_14"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/cv_categories"
        app:layout_constraintTop_toBottomOf="@id/cv_categories"/>

</androidx.constraintlayout.widget.ConstraintLayout>